<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="8dp"
    app:layout_goneMarginStart="16dp">
    <TextView
        android:id="@+id/text_date_receiver"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/default_date"
        />
    <ImageView
        android:id="@+id/receiver_profile"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="16dp"
        android:contentDescription="User Icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_date_receiver"
        />
    <TextView
        android:id="@+id/receiver_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:cardBackgroundColor="#eef1f6"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="12dp"
        android:text="John Grady Cole"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/receiver_profile"
        app:layout_constraintEnd_toEndOf="@+id/text_date_receiver"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/chat_receiver_card"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/receiver_profile"
        app:layout_constraintTop_toBottomOf="@+id/receiver_name"
        app:cardCornerRadius="12dp">
        <LinearLayout
            android:id="@+id/receiver_container"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/receiver_message"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Message"
                android:textColor="#000000"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/receiver_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8:00"
        android:textColor="@color/time"
        app:layout_constraintBottom_toBottomOf="@+id/chat_receiver_card"
        app:layout_constraintStart_toEndOf="@+id/chat_receiver_card"/>

</androidx.constraintlayout.widget.ConstraintLayout>